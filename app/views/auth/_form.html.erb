<%= form_for :login do |f| %>
  <div class="mb-3 row">
    <div class="col">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>