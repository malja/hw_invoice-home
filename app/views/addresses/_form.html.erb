<%= form_with model: [@person, @address], local: true do |f| %>
  <%= render partial: "partials/form/errors", :locals => { errors: @address.errors } %>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :street, class: "form-label" %>
      <%= f.text_field :street, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :town, class: "form-label" %>
      <%= f.text_field :town, class: "form-control"  %>
    </div>

    <div class="mb-3 col">
      <%= f.label :zip_code, class: "form-label" %>
      <%= f.text_field :zip_code, class: "form-control"  %>
    </div>
  </div>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :state, class: "form-label" %>
      <%= f.text_field :state, class: "form-control"  %>
    </div>

    <div class="mb-3 col">
      <%= f.label :country, class: "form-label" %>
      <%= f.select :country, options_for_select(ISO3166::Country.all_names_with_codes ), {}, class: "form-select"  %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Save Address", class: "btn btn-primary me-3" %> or <%= link_to "Go back", person_path(@person), class: "btn btn-link" %>
  </div>
<% end %>