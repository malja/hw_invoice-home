<table class="table table-hover align-middle">
  <thead class="table-light text-secondary">
    <tr>
      <th>Street</th>
      <th>Town</th>
      <th>ZIP Code</th>
      <th>State</th>
      <th>Country</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if addresses.present? %>
      <% addresses.each do |address| %>
        <tr>
          <td><%= address.street %></td>
          <td><%= address.town %></td>
          <td><%= address.zip_code %></td>
          <td><%= address.state %></td>
          <td><%= address.country %></td>
          <td class="text-end">
            <%= action_link 'View', "bi-eye", edit_person_address_path(person, address) %>
            <%= action_link 'Delete', "bi-trash", person_address_path(person, address), { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6" class="text-center text-secondary">No Address Found</td>
      </tr>
    <% end %>
  </tbody>
</table>