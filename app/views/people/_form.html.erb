<%= form_for @person do |f| %>
  <%= render partial: "partials/form/errors", :locals => { errors: @person.errors } %>

  <div class="row pt-3">
    <div class="mb-3 col">
      <%= f.label :salutation, "Salutation", class: "form-label" %>
      <%= f.select :salutation, options_for_select(Person.salutations.map {|key, value| [value, key]}), {}, class: "form-select" %>
    </div>

    <div class="mb-3 col">
      <%= f.label :first_name, "First name", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="mb-3 col">
      <%= f.label :middle_name, "Middle Name", class: "form-label" %>
      <%= f.text_field :middle_name, class: "form-control" %>
    </div>

    <div class="mb-3 col">
      <%= f.label :last_name, "Last Name", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :ssn, "Social Security Number", class: "form-label" %>
      <%= f.number_field :ssn, class: "form-control" %>
      <div class="form-text">Both numbers-only (AAAGGSSSS) and SSN with dashes (AAA-GG-SSSS) are allowed.</div>
    </div>

    <div class="mb-3 col">
      <%= f.label :birth_date, "Birthdate", class: "form-label d-block" %>
      <div class="d-flex gap-2">
        <%= f.date_select :birth_date, { :start_year => Time.now.year - 99, :end_year => Time.now.year, :order => [:day, :month, :year] }, class: "form-select d-inline" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :comment, "Comment", class: "form-label" %>
    <%= f.text_area :comment, class: "form-control" %>
    <div class="form-text">Comment is optional and unlimited in length.</div>
  </div>

  <div class="actions">
    <%= f.submit nil, class: "btn btn-primary me-3" %> or <%= link_to "Cancel", app_path, class: "btn btn-link text-danger" %>
  </div>
<% end %>