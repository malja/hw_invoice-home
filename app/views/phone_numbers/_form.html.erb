<%= form_with model: [@person, @phone_number], local: true do |f| %>
  <%= render partial: "partials/form/errors", :locals => { errors: @phone_number.errors } %>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :phone_number, class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="mb-3 col">
      <%= f.label :comment, class: "form-label" %>
      <%= f.text_area :comment, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit nil, class: "btn btn-primary me-3" %> or <%= link_to "Go back", person_path(@person), class: "btn btn-link" %>
  </div>
<% end %>